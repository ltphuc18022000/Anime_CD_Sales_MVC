@page
@model AnimeCDRazor_Temp.Pages.Categories.IndexModel


<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				Category List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="/categories/create" class="btn btn-primary"> @*Ten controller truoc ten action*@
				<i class="bi bi-plus-circle"></i> Create New Category 
			</a>
		</div>
	</div>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					Category Name
				</th>
				<th>
					Display Order
				</th>
				<th>
					
					
				</th>
			</tr>
		</thead>
		<tbody>
			@*dùng để lặp qua danh sách các đối tượng và hiển thị dữ liệu trong một view*@
			@foreach (var obj in Model.CategoryList.OrderBy(u=>u.DisplayOrder)) 
			{
				<tr>
					<td>
						@*Dùng @obj. để add truy cập thuộc tính*@
						@obj.Name @*Hiển thị tên ở bên trong*@
					</td>
					<td>
						@obj.DisplayOrder @*Hiển thị thứ tự ở bên trong*@
					</td>   
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-success mx-2"> 
								<i class="bi bi-pencil-square"></i> Edit
							</a>
							<a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
								<i class="bi bi-trash-fill"></i> Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>