@* model keyword từ Index trong ProductController *@
@model List<Product>
@if (TempData["success"] != null) @*Tạo dữ liệu tạm thời "success"*@
{
	<h2>@TempData["success"]</h2>
}
<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Danh sách thể loại Anime</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">

			</div>
			<div class="col-6 text-end">
				<a asp-controller="Product" asp-action="Create" class="btn btn-primary">
					@*Ten controller truoc ten action*@
					<i class="bi bi-plus-circle"></i> Create New Product
				</a>
			</div>
		</div>
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>
						Tên Anime
					</th>
					<th>
						Thể loại
					</th>
					<th>
						Tác giả
					</th>
					<th>
						Số serial
					</th>
					<th>
						Giá niêm yết
					</th>

					<th></th>
				</tr>
			</thead>
			<tbody>
				@*Tạo vòng lặp dùng Model từ @model List<Product> objProductList*@
				@foreach (var obj in Model)
				{
					<tr>
						<td>
							@*Dùng @obj. để add truy cập thuộc tính*@
							@obj.Title @*Hiển thị tên ở bên trong*@
						</td>
						<td>
							@obj.Category
						</td>
						<td>
							@obj.Author 
						</td>
						<td>
							@obj.Serial
						</td>
						<td>
							@obj.ListPrice
						</td>
						<td>
							<div class="w-75 btn-group" role="group">
								<a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-success mx-2">
									<i class="bi bi-pencil-square"></i> Edit
								</a>
								<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
									<i class="bi bi-trash-fill"></i> Delete
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
